html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    //meta(name='viewport', content='width=device-width')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href='/assets/css/main.css', rel='stylesheet', type='text/css')
    link(rel="icon" type="x-icon" href="assets/img/1500473951.ico")
    script(src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js")
    meta(name='og:title', content= title + ' | London to Istanbul')
    meta(name='twitter:title', content= title + ' | London to Istanbul')
    meta(name='description', content= "A Blog About a Crazy Cycling Trip from London to Istanbul following the Eurovelo routes 5 and 6.")
    meta(name='og:description', content="A Blog About a Crazy Cycling Trip from London to Istanbul following the Eurovelo routes 5 and 6.")
    meta(name='twitter:description', content="A Blog About a Crazy Cycling Trip from London to Istanbul following the Eurovelo routes 5 and 6.")
    meta(name='twitter:card', content= 'summary')
    meta(name='article:modified_time', content= time)
    meta(name='og:locale', content= 'en_EN')
    meta(name='og:type', content= 'website')
    meta(name='og:site_name', content= 'A Blog About a Crazy Cycling Trip | London to Istanbul')
    meta(name='og:image', content= cover_image)
    meta(name='twitter:image', content= cover_image) 
    
  
      
    title= title
  body
    each article in collections.articles
      article
        header
          h1
            a(href='/' + article.path)= article.title
          p.timestamp_wrap
            span.timestamp= moment(article.date).format('D MMMM, YYYY')
          p= article.summary
          
          
    
    script(src='https://code.jquery.com/jquery-3.1.0.min.js')
    script(src='/assets/js/main.js')
